    <body>
        <div align="center" id="modal_login" class="modal">
            <h3>Login</h3>
            <form action="/login" method="post">
                <div class="form-group">
                    <input placeholder="E-mail Address" type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <input placeholder="The secret of your social life a.k.a Password" type="password" class="form-control" name="password">
                </div>
                <br>
                <button type="submit" class="btn-large waves-effect waves-light orange">Login</button>
            </form>
        </div>
        <div align="center" id="modal_signup" class="modal">
            <h3>Sign Up</h3>
            <form action="/signup" method="post">
                <div class="form-group">
                    <input placeholder="E-mail Address" type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <input placeholder="The secret of your social life a.k.a Password" type="password" class="form-control" name="password">
                </div>
                <br>
                <button type="submit" class="btn-large waves-effect waves-light orange">Signup</button>
            </form>
        </div>
